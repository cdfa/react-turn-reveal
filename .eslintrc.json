{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react",
    "prettier",
    "plugin:jest/recommended",
    "plugin:jest/style"
  ],
  "env": {
    "es6": true,
    "browser": true
  },
  "plugins": [
    "react",
    "prettier",
    "json",
    "jest"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "//": "Don't force es6 functions to include space before paren",
    "space-before-function-paren": 0,
    "prettier/prettier": "warn"
  },
  "overrides": [
    {
      "files": [
        "*.spec.{js,jsx}"
      ],
      "env": {
        "jest": true,
        "jest/globals": true
      }
    }
  ]
}
