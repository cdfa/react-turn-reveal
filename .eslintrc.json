{
  "parser": "babel-eslint",
  "extends": [
    "prettier",
    "plugin:jest/recommended",
    "plugin:jest/style"
  ],
  "env": {
    "es6": true,
    "browser": true
  },
  "plugins": [
    "react",
    "prettier",
    "json",
    "jest"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "space-before-function-paren": 0, // Don't force es6 functions to include space before paren
    "prettier/prettier": "warn",
    "react/require-optimization": "warn",
    "react/destructuring-assignment": "warn",
    "react/static-property-placement": "warn"
  },
  "overrides": [
    {
      "files": [
        "*.spec.{js,jsx}"
      ],
      "env": {
        "jest": true,
        "jest/globals": true
      }
    }
  ]
}
