{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react",
    "prettier"
  ],
  "env": {
    "es6": true
  },
  "plugins": [
    "react",
    "prettier",
    "json"
  ],
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    // don't force es6 functions to include space before paren
    "space-before-function-paren": 0,
    "prettier/prettier": "warn"
  }
}
